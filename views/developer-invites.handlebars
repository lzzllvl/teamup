
<!-- project list -->
<div class="container">
  <div class="row">
        <div class="spacer" style="line-height:10px;height:10px;"></div>
      <h1>My Invites</h1>
        {{#each projects}}
        {{#unless this.accepted}}
        <div class="container oneInvite inviteContainer">
          <a class="col projectName" href="/project/{{this.id}}">
            <h3 class="projectName">{{this.project_name}}</h3>
          </a>

          <h3 class="col col-md-3 inviteLabels">Message:</h3>
            <p class="col col-md-11 smallText">{{this.message}}</p>

            <div class="spacer" style="line-height:30px;height:30px;"></div>
          <h3 class="col col-md-3 inviteLabels">Invite Sent:</h3>
          <p class="col col-md-11 smallText">May 22, 2017</p>
          <div class="spacer" style="line-height:30px;height:30px;"></div>
          <h3 class="col col-md-3 inviteLabels">Accepted?</h3>
          <p class="col col-md-11 smallText">{{this.accepted}}</p>
                      <div class="spacer" style="line-height:30px;height:30px;"></div>

        <div class="row buttonRow">
          <form action="/developer/acceptInvite/{{this.inviteId}}?_method=PUT" method="POST">
            <button type='submit' class="btn col-md-2 col-xs-12 grow respondBtn acceptBtn"  class="button-size">Accept</button>
          </form

          <a href="NOT SURE">
            <button class="btn col-md-2 col-xs-12 grow respondBtn declineBtn">Decline</button>
          </a>
        </div>

          <div class="spacer" style="line-height:30px;height:30px;"></div>
        </div>
        {{/unless}}
        {{/each}}

  </div>
</div>


